<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Student Interest Application</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Student Servlets -->
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>com.studentinterest.servlet.StudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>

    <!-- Interest Servlets -->
    <servlet>
        <servlet-name>InterestServlet</servlet-name>
        <servlet-class>com.studentinterest.servlet.InterestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InterestServlet</servlet-name>
        <url-pattern>/interest</url-pattern>
    </servlet-mapping>

    <!-- Report Servlet -->
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.studentinterest.servlet.ReportServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>
</web-app>
